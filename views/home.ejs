<div class="container-fluid">
    <div class="row">

        <!-- /left-column -->
        <div class="col-lg-8 col-xl-9 mt-3">
            <div class="row justify-content-center">
                <div class="col-sm-11 col-md-10 col-lg-11 col-xl-8">

                    <!-- thông báo -->
                    <div class="alert alert-primary alert-dismissible fade show notiRealtime" role="alert" style="display:none">
                        Khoa CNTT vừa đăng 1 thông báo mới!
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <!-- Đăng bài viết -->
                    <div class="card my-3">
                        <div class="card-header">
                            <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active">
                                        Đăng bài viết
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="form-group">
                                    <label class="sr-only" for="inputPost">post</label>
                                    <textarea class="form-control form-control-sm" id="inputPost" rows="3"
                                        placeholder="Bạn đang nghĩ gì?"></textarea>
                                </div>
                                <div class="collapse" id="collapseImageInput">
                                    <div class="form-group">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="customFile"
                                                accept="image/png, image/jpeg" />
                                            <label class="custom-file-label" for="customFile">Chọn file</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="collapse" id="collapseYoutubeLink">
                                    <div class="form-group">
                                        <input id="linkYT" type="text" class="form-control form-control-sm"
                                            placeholder="Dán liên kết video từ Youtube vào đây" />
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex">
                                <div class="mr-auto">
                                    <!-- Image Button -->
                                    <button class="btn text-secondary rounded-lg" type="button" data-toggle="collapse"
                                        data-target="#collapseImageInput" aria-expanded="false"
                                        aria-controls="collapseImageInput">
                                        <i class="fa fa-file-image-o"></i>
                                    </button>
                                    <!-- YouTube Button -->
                                    <button class="btn text-secondary rounded-lg" type="button" data-toggle="collapse"
                                        data-target="#collapseYoutubeLink" aria-expanded="false"
                                        aria-controls="collapseYoutubeLink">
                                        <i class="fa fa-youtube-play"></i>
                                    </button>
                                </div>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary"
                                        id="buttonPost">POST</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Status time line -->
                    <div id="timeline">

                    </div>
                    <!-- <div id="loader" class="text-center">
                        <div class="lds-dual-ring"></div>
                    </div> -->
                </div>
            </div>
        </div>
        <!-- /left-column -->

        <!-- right-column -->
        <div class="col-lg-4 col-xl-3 mt-3">
            <div class="row justify-content-center">
                <div class="col-sm-auto"></div>
                <div class="col-sm-11 col-md-10 col-lg-12">
                    <h6>THÔNG BÁO MỚI</h6>
                    <div class="border rounded-lg pt-2" style="height: 400px; overflow-y: scroll">
                        <table class="table table-striped">
                            <% for (var i=0; i < 7; i++ ) { %>
                                <tr>
                                    <td>
                                        <small><i>[Phòng Tài chính]</i> - 23/11/2020</small>
                                        <br />
                                        <a href="">Gia hạn học phí Tiếng Anh</a>
                                    </td>
                                </tr>
                                <% } %>
                        </table>
                        <div class="d-flex justify-content-center mb-3">
                            <a href="/notifications"><i>Xem tất cả >></i></a>
                        </div>
                    </div>

                    <!-- Nhạc -->
                    <marquee direction="left" class="mt-3">
                        <i class="fa fa-music"></i>
                        Mời các bạn lắng nghe bài hát
                        <i>Hành khúc Đại Học Tôn Đức Thắng</i>
                        <i class="fa fa-music"></i>
                    </marquee>
                    <audio controls class="form-control form-control-lg">
                        <source src="audio\HanhKhucDHTonDucThang.mp3" type="audio/mpeg">
                    </audio>

                    <!-- Lịch -->
                    <div class="embed-responsive embed-responsive-1by1 border rounded-lg mt-3 py-2">
                        <iframe class="embed-responsive-item"
                            src="https://calendar.google.com/calendar/embed?height=300&amp;wkst=1&amp;bgcolor=%23ffffff&amp;ctz=Asia%2FHo_Chi_Minh&amp;src=aGlldXRhZGEya0BnbWFpbC5jb20&amp;src=Y2xhc3Nyb29tMTA0MTM5ODExODk3OTA3MjcyMjQ3QGdyb3VwLmNhbGVuZGFyLmdvb2dsZS5jb20&amp;src=MjJhNzRpcXFsdWRtcG1ia2h0N3FiODdsOWNAZ3JvdXAuY2FsZW5kYXIuZ29vZ2xlLmNvbQ&amp;color=%23039BE5&amp;color=%23007b83&amp;color=%23AD1457&amp;showTitle=0&amp;showCalendars=0&amp;showTabs=0&amp;showDate=1&amp;showTz=0&amp;showNav=1"
                            frameborder="0" scrolling="no"></iframe>
                    </div>
                </div>
                <div class="col-sm-auto"></div>
            </div>
        </div>
    </div>
</div>

<!-- DELETE POST MODAL -->
<div class="modal fade" id="confirm-delete-dialog" tabindex="-1" role="dialog" aria-labelledby="modalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Xóa bài viết</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc muốn xóa bài viết</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="comfirm-delete-btn" value="">Xóa</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirm-edit-dialog" tabindex="-1" role="dialog" aria-labelledby="modalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Chỉnh sửa bài viết</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="">Bài viết</label>
                    <textarea class="form-control form-control-sm" id="edit-inputPost" rows="3"
                        placeholder="Bạn đang nghĩ gì?"></textarea>
                </div>
                <div class="form-group">
                    <label for="">Hình ảnh</label>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="edit-customFile" accept="image/png, image/jpeg" />
                        <label class="custom-file-label" for="customFile">Chọn file</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="">Youtube</label>
                    <input id="edit-linkYT" type="text" class="form-control form-control-sm"
                        placeholder="Chỉnh sửa liên kết Youtube" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="comfirm-delete-btn" value="">Cập nhật</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>